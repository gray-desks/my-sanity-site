{
  "name": "my-sanity-site",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "package.json",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "sanity dev",
    "start": "sanity start",
    "build": "cd site && npm ci && npm run build && cp -r dist ../dist",
    "deploy": "sanity deploy",
    "deploy:studio": "sanity deploy",
    "deploy-graphql": "sanity graphql deploy",
    "lint": "echo \"No TypeScript files to lint\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@sanity/client": "^7.8.2",
    "@sanity/document-internationalization": "^3.3.3",
    "@sanity/ui": "^2.0.0",
    "@sanity/vision": "^4.3.0",
    "react": "^19.1",
    "react-dom": "^19.1",
    "sanity": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^19.1",
    "prettier": "^3.3.0",
    "typescript": "^5.8",
    "vitest": "^2.1.1"
  }
}
