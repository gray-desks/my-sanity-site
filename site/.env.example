# Sanity Configuration
PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
PUBLIC_SANITY_DATASET=production
PUBLIC_SANITY_API_VERSION=2024-01-01

# Site Configuration
PUBLIC_SITE_URL=https://your-domain.vercel.app
PUBLIC_SITE_TITLE=旅ログ - 日本全国の旅記録

# Revenue Configuration
PUBLIC_BOOKING_AFFILIATE_ID=your-booking-affiliate-id
PUBLIC_ADSENSE_CLIENT_ID=ca-pub-your-adsense-id

# Revalidation (Vercel)
REVALIDATE_SECRET=your-super-secret-revalidate-key
VERCEL_DEPLOY_HOOK=your-vercel-deploy-hook-id

# Google Photos OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
# OAuth2 redirect URI for callback handling
GOOGLE_REDIRECT_URI=https://www.japantravellog.com/admin/oauth2callback
# Target album ID for photo downloads (get from sharing URL or Photos API)
GOOGLE_PHOTOS_ALBUM_ID=your-specific-album-id

# Legacy Service Account Configuration (optional, for server-to-server access)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./service-account-key.json

# Admin Authentication
ADMIN_USERNAME=admin

# OG Image Cache Busting
# Increment this version when you replace the default OG images so that
# social platforms fetch the new image instead of the cached one.
OG_IMAGE_VERSION=v2
ADMIN_PASSWORD=your-secure-password