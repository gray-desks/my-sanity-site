---
export interface Props {
  title: string
  lang?: 'ja' | 'en'
  url?: string
}
const { title, lang = 'ja', url = Astro.request.url } = Astro.props
const encodedUrl = encodeURIComponent(url)
const encodedTitle = encodeURIComponent(title)
---
<div class="flex gap-3 mt-8">
  <a
    href={`https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center px-4 py-2 rounded-lg bg-brand-500 text-white hover:bg-brand-600 transition-colors text-sm font-semibold"
    aria-label="Share on X"
  >
    X
  </a>
  <a
    href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center px-4 py-2 rounded-lg bg-secondary-500 text-white hover:bg-secondary-600 transition-colors text-sm font-semibold"
    aria-label="Share on Facebook"
  >
    Facebook
  </a>
</div>
