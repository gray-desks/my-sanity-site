---
export interface Props {
  lang?: 'ja' | 'en'
}
const { lang = 'ja' } = Astro.props

const labels = {
  title: lang === 'ja' ? '最新記事をメールで受け取る' : 'Get updates in your inbox',
  desc: lang === 'ja'
    ? '新着記事や特集をお知らせします。登録はいつでも解除できます。'
    : 'Stay in the loop. Unsubscribe anytime.',
  placeholder: lang === 'ja' ? 'メールアドレス' : 'Email address',
  button: lang === 'ja' ? '登録' : 'Subscribe',
}
---
<section class="max-w-xl mx-auto text-center">
  <h2 class="text-2xl font-bold mb-2 text-gray-900 dark:text-gray-100 tracking-tight">
    {labels.title}
  </h2>
  <p class="mb-6 text-gray-600 dark:text-gray-400 leading-relaxed">
    {labels.desc}
  </p>
  <form
    action="https://example.us20.list-manage.com/subscribe/post" 
    method="POST" 
    class="flex flex-col sm:flex-row items-center gap-3"
  >
    <input
      type="email" 
      name="EMAIL" 
      required
      placeholder={labels.placeholder}
      class="w-full px-4 py-3 rounded-lg bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-brand-500 outline-none text-gray-800 dark:text-gray-100 transition-colors"
    />
    <button
      type="submit"
      class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-brand-500 text-white font-semibold hover:bg-brand-600 active:scale-95 transition-all whitespace-nowrap"
    >
      {labels.button}
    </button>
  </form>
</section>
