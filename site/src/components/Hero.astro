---
import { getUILabel, DEFAULT_LANGUAGE } from '../lib/i18n'

export interface Props {
  lang?: string
}

const { lang = DEFAULT_LANGUAGE } = Astro.props

const title = getUILabel(lang, 'heroTitle')
const subtitle = getUILabel(lang, 'heroSubtitle')
const ctaText = getUILabel(lang, 'readStories')
---

<section class="relative overflow-hidden min-h-[35vh] flex items-center justify-center bg-white py-10 md:py-16">
  <!-- Hinomaru-inspired circle background -->
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] pointer-events-none">
    <div class="w-full h-full rounded-full opacity-35 hinomaru-circle"></div>
  </div>
  
  <!-- Fade to white at top -->
  <div class="absolute inset-x-0 top-0 h-20 bg-gradient-to-b from-white to-transparent pointer-events-none"></div>

  <!-- Content -->
  <div class="relative max-w-4xl mx-auto px-6 text-center z-10">
    <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-[var(--theme-ink-strong)] mb-3">
      {title}
    </h1>
    <p class="mt-2 text-sm md:text-base text-neutral-600 max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>
</section>

<style>
  /* Hinomaru-inspired radial gradient */
  .hinomaru-circle {
    background: radial-gradient(circle, var(--theme-accent-weak) 0%, var(--theme-accent-fade) 40%, transparent 70%);
  }

  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
    }
  }
  
  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes dash {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: 20; }
  }
  
  .animate-spin-slow {
    animation: spin-slow 60s linear infinite;
  }
  
  .animate-dash {
    animation: dash 3s linear infinite;
  }
  
  /* Professional typography enhancements */
  h1 {
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>