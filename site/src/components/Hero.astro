---
import { getUILabel, DEFAULT_LANGUAGE } from '../lib/i18n'

export interface Props {
  lang?: string
}

const { lang = DEFAULT_LANGUAGE } = Astro.props

const title = getUILabel(lang, 'heroTitle')
const subtitle = getUILabel(lang, 'heroSubtitle')
const ctaText = getUILabel(lang, 'readStories')
---

<section class="relative overflow-hidden min-h-[40vh] flex items-center justify-center bg-base py-12 md:py-20">
  <!-- Hinomaru-inspired background -->
  <div class="absolute -translate-x-1/3 w-[700px] h-[700px] bg-primary/5 rounded-full"></div>

  <!-- Content -->
  <div class="relative max-w-4xl mx-auto px-6 text-center">
    <h1 class="font-serif text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight text-ink mb-4">
      {title}
    </h1>
    <p class="text-lg md:text-xl text-secondary max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>
</section>

<style>
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
    }
  }
  
  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes dash {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: 20; }
  }
  
  .animate-spin-slow {
    animation: spin-slow 60s linear infinite;
  }
  
  .animate-dash {
    animation: dash 3s linear infinite;
  }
  
  /* Professional typography enhancements */
  h1 {
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>