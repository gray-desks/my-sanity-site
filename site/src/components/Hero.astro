---
import { getUILabel, DEFAULT_LANGUAGE } from '../lib/i18n'

export interface Props {
  lang?: string
}

const { lang = DEFAULT_LANGUAGE } = Astro.props

const title = getUILabel(lang, 'heroTitle')
const subtitle = getUILabel(lang, 'heroSubtitle')
const ctaText = getUILabel(lang, 'readStories')
---

<section class="relative overflow-hidden min-h-[35vh] flex items-center justify-center bg-base py-10 md:py-16">
  <!-- Japan-inspired gradient background -->
  <div class="absolute inset-x-0 -top-20 h-72 pointer-events-none bg-[radial-gradient(circle_at_40%_0%,_var(--theme-accent-weak)_0%,_transparent_60%)]"></div>

  <!-- Content -->
  <div class="relative max-w-4xl mx-auto px-6 text-center">
    <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-[var(--theme-ink-strong)] mb-3">
      {title}
    </h1>
    <p class="mt-2 text-sm md:text-base text-neutral-600 max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>
</section>

<style>
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
    }
  }
  
  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes dash {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: 20; }
  }
  
  .animate-spin-slow {
    animation: spin-slow 60s linear infinite;
  }
  
  .animate-dash {
    animation: dash 3s linear infinite;
  }
  
  /* Professional typography enhancements */
  h1 {
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>