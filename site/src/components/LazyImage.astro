---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  [key: string]: any;
}

const { 
  src, 
  alt, 
  width, 
  height, 
  loading = 'lazy',
  class: className = '',
  ...props 
} = Astro.props;

// Generate intrinsic size ratio for CLS prevention
const aspectRatio = width && height ? `${width}/${height}` : undefined;
---

<img 
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  class={`transition-opacity duration-300 ${className}`}
  style={aspectRatio ? `aspect-ratio: ${aspectRatio};` : undefined}
  {...props}
/>

<style>
  img {
    /* Prevent layout shift while loading */
    max-width: 100%;
    height: auto;
  }
  
  img[loading="lazy"] {
    /* Add fade-in effect for lazy loaded images */
    opacity: 0;
    animation: fadeIn 0.3s ease-in-out forwards;
  }
  
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>