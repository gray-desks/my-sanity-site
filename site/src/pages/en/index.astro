  articles = await getArticles('en')
} catch (error) {
  console.error('Failed to fetch English articles:', error)
}

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  })
}
