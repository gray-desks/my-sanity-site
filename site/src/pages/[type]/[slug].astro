  transport: '‰∫§ÈÄö',
  hotel: '„Éõ„ÉÜ„É´',
  note: '„É°„É¢'
}
---

<Layout 
  title={`${article.title} | ÊóÖ„É≠„Ç∞`}
  description={`${typeLabels[article.type]} - ${article.placeName || article.title}`}
>
  <article class="max-w-4xl mx-auto">
    <!-- „Éò„ÉÉ„ÉÄ„Éº -->
