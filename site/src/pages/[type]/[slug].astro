---
import { getStaticPaths } from 'astro:content'
import Layout from '../../layouts/Layout.astro'
import Gallery from '../../components/Gallery.astro'
import AffiliateBlock from '../../components/AffiliateBlock.astro'
import AdSense from '../../components/AdSense.astro'
import SocialShare from '../../components/ui/SocialShare.astro'
import { getArticleBySlug, getAllArticleSlugs, type Article } from '../../lib/sanity'

export async function getStaticPaths() {
  const slugs = await getAllArticleSlugs()
  
  return slugs
    .filter(item => item.lang === 'ja')
    .map((item) => ({
      params: { 
        type: item.type,
        slug: item.slug 
      },
    }))
}

const { type, slug } = Astro.params
const article = await getArticleBySlug(slug!, 'ja')

if (!article) {
  return Astro.redirect('/404')
}

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  })
}

