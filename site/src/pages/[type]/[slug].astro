      </div>
    )}

    <!-- Êú¨Êñá -->
    <div class="prose prose-lg max-w-none mb-8">
      {article.body && article.body.map((block) => {
        if (block._type === 'block') {
          return (
            <div set:html={block.children?.map(span => span.text).join('') || ''} />
          )
        } else if (block._type === 'image') {
          return (
