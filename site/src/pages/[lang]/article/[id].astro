---
import Layout from '../../../layouts/Layout.astro'
import Gallery from '../../../components/Gallery.astro'
import AdSlot from '../../../components/AdSlot.astro'
import PortableTextWithAds from '../../../components/PortableTextWithAds.astro'
import { getArticleById, client, type Article } from '../../../lib/sanity'
import { ENABLED_LANGUAGES, getLocalizedPath, getUILabel } from '../../../lib/i18n'
import { ADS_SLOTS } from '../../../config/ads'

export async function getStaticPaths() {
  const paths = []

  // ÂêÑË®ÄË™û„Åî„Å®„Å´„ÄÅ„Åù„ÅÆË®ÄË™û„ÅÆË®ò‰∫ã„ÅÆ„Åø„Åß„Éë„Çπ„ÇíÁîüÊàê
  for (const { id: langId } of ENABLED_LANGUAGES.filter(l => l.id !== 'ja')) {
    const langFilter = langId === 'ja' ? '(!defined(lang) || lang == "ja")' : `lang == "${langId}"`
    const articles = await client.fetch(`*[_type == "article" && ${langFilter}]{ _id }`)

    for (const article of articles) {
      // Êó•Êú¨Ë™û„ÅØ„É´„Éº„Éà„Å´Ë®ÄË™û„Ç≥„Éº„Éâ„ÇíÂê´„ÇÅ„Å™„ÅÑ
      paths.push({
        params: {
          lang: langId === 'ja' ? undefined : langId,
          id: article._id
        }
      })
    }
  }

  return paths
}

const { lang, id } = Astro.params
const article: Article | null = await getArticleById(id!)

if (!article) {
  return Astro.redirect('/404')
}

const formatDate = (dateString: string) => {
  const locale = lang === 'ja' ? 'ja-JP' :
                 lang === 'en' ? 'en-US' :
                 lang === 'zh-cn' ? 'zh-CN' :
                 lang === 'zh-tw' ? 'zh-TW' :
                 lang === 'ko' ? 'ko-KR' :
                 'en-US'
  
  return new Date(dateString).toLocaleDateString(locale, {
    year: 'numeric',
    month: 'long', 
    day: 'numeric'
  })
}

const typeConfig = {
  spot: { emoji: 'üóæ', label: getUILabel(lang, 'spot') },
  food: { emoji: 'üç£', label: getUILabel(lang, 'food') },
  transport: { emoji: 'üöÑ', label: getUILabel(lang, 'transport') },
  hotel: { emoji: 'üõèÔ∏è', label: getUILabel(lang, 'hotel') },
  note: { emoji: 'üìù', label: getUILabel(lang, 'note') }
}

const config = typeConfig[article.type as keyof typeof typeConfig] || typeConfig.note
---

<Layout 
  title={article.title} 
  description={article.bodyText?.slice(0, 160) || `${article.title}„ÅÆË®ò‰∫ã„Åß„Åô„ÄÇ`}
  lang={lang}
  pageType="article"
  frontmatter={{
    title: article.title,
    description: article.bodyText?.slice(0, 160) || `${article.title}„ÅÆË®ò‰∫ã„Åß„Åô„ÄÇ`,
    heroImage: article.coverImage?.asset?.url,
    publishedAt: article.publishedAt,
    type: article.type,
    lang: lang
  }}
>
  <!-- Hero Image (Mobile Full-bleed) -->
  {article.coverImage?.asset?.url && (
    <picture class="block md:hidden -mx-4 sm:-mx-6 mb-4">
      <img 
        src={`${article.coverImage.asset.url}?w=1200&h=600&fit=crop&auto=format`}
        alt={article.title}
        class="w-full aspect-video object-cover rounded-none cursor-pointer"
        id="cover-image-mobile"
        data-lightbox-url={`${article.coverImage.asset.url}?auto=format`}
        loading="eager"
      />
    </picture>
  )}

  <!-- Mobile wrapper with padding -->
  <div class="px-4 md:px-0">
    <div class="max-w-7xl mx-auto md:px-4 py-8">
      <!-- Main content in center column, sidebar on desktop -->
      <div class="lg:grid lg:grid-cols-4 lg:gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-3 bg-white md:rounded-2xl md:shadow-lg mt-4 md:mt-0">
          <div class="md:px-8 py-6 md:py-8">
          <!-- Cover Image (PC only - ÊúÄ‰∏äÈÉ®) -->
          {article.coverImage?.asset?.url && (
            <div class="mb-8 md:rounded-2xl overflow-hidden md:shadow-lg hidden md:block">
              <img 
                src={`${article.coverImage.asset.url}?w=1200&h=600&fit=crop&auto=format`}
                alt={article.title}
                class="w-full h-96 object-cover cursor-pointer"
                id="cover-image"
                data-lightbox-url={`${article.coverImage.asset.url}?auto=format`}
              />
            </div>
          )}

          <!-- Title -->
          <header class="mb-6">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight mb-4">
              {article.title}
            </h1>
          </header>

          <!-- Tags and Date -->
          <div class="mb-8 pb-6 border-b border-gray-200">
            <div class="flex flex-wrap items-center gap-3">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-neutral-100 text-neutral-600">
                <span class="mr-1">{config.emoji}</span>
                {config.label}
