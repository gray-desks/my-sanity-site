---
import Layout from '../../../layouts/Layout.astro'
import Gallery from '../../../components/Gallery.astro'
import { getArticleById, client, type Article } from '../../../lib/sanity'
import { ENABLED_LANGUAGES, getLocalizedPath, getUILabel } from '../../../lib/i18n'

export async function getStaticPaths() {
  // å…¨è¨˜äº‹ã®IDã‚’å–å¾—
  const articles = await client.fetch(`*[_type == "article"]{ _id }`)
  
  // æ—¥æœ¬èªä»¥å¤–ã®å„è¨€èªãƒšãƒ¼ã‚¸ã‚’ç”Ÿæˆ
  const paths = []
  
  for (const lang of ENABLED_LANGUAGES.filter(l => l.id !== 'ja')) {
    for (const article of articles) {
      paths.push({
        params: { 
          lang: lang.id,
          id: article._id 
        }
      })
    }
  }
  
  return paths
}

const { lang, id } = Astro.params
const article: Article | null = await getArticleById(id!)

if (!article) {
  return Astro.redirect('/404')
}

const formatDate = (dateString: string) => {
  const locale = lang === 'ja' ? 'ja-JP' :
                 lang === 'en' ? 'en-US' :
                 lang === 'zh-cn' ? 'zh-CN' :
                 lang === 'zh-tw' ? 'zh-TW' :
                 lang === 'ko' ? 'ko-KR' :
                 'en-US'
  
  return new Date(dateString).toLocaleDateString(locale, {
    year: 'numeric',
    month: 'long', 
    day: 'numeric'
  })
}

const typeConfig = {
  spot: { emoji: 'ğŸ—¾', label: getUILabel(lang, 'spot') },
  food: { emoji: 'ğŸ£', label: getUILabel(lang, 'food') },
  transport: { emoji: 'ğŸš„', label: getUILabel(lang, 'transport') },
  hotel: { emoji: 'ğŸ›ï¸', label: getUILabel(lang, 'hotel') },
  note: { emoji: 'ğŸ“', label: getUILabel(lang, 'note') }
}

const config = typeConfig[article.type as keyof typeof typeConfig] || typeConfig.note
---

<Layout 
  title={article.title} 
  description={article.bodyText?.slice(0, 160) || `${article.title}ã®è¨˜äº‹ã§ã™ã€‚`}
  lang={lang}
>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <header class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-gray-100 text-gray-700">
          <span class="mr-2">{config.emoji}</span>
          {config.label}
        </span>
        {article.placeName && (
          <div class="flex items-center text-gray-600">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{article.placeName}</span>
          </div>
        )}
      </div>
      
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {article.title}
      </h1>
      
      <time datetime={article.publishedAt} class="text-gray-600">
        {formatDate(article.publishedAt)}
      </time>
    </header>

    <!-- Cover Image -->
    {article.coverImage?.asset?.url && (
      <div class="mb-8 rounded-2xl overflow-hidden shadow-lg">
        <img 
          src={`${article.coverImage.asset.url}?w=1200&h=600&fit=crop&auto=format`}
          alt={article.title}
          class="w-full h-96 object-cover"
        />
      </div>
    )}

    <!-- Content -->
    <div class="prose prose-lg max-w-none mb-8">
      {article.body && (
        <div class="article-content">
          <p class="text-gray-700 leading-relaxed">
