    display: none !important;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .lightbox-overlay img {
    max-height: 90vh;
    max-width: 90vw;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
  
  .lightbox-overlay button {
    user-select: none;
    outline: none;
  }
  
  .lightbox-overlay button:focus {
    outline: 2px solid white;
    outline-offset: 2px;
  }
</style>