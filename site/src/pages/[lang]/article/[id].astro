              {article.body && article.body.length > 0 ? (
                <div class="article-content">
                  <PortableTextWithAds value={article.body} lang={lang} showAds={false} />
                </div>
              ) : (
                <div class="text-gray-800 leading-relaxed text-lg">
                  {article.bodyText || 
