---
import Layout from '../../../layouts/Layout.astro'
import Gallery from '../../../components/Gallery.astro'
import { getArticleById, client, type Article } from '../../../lib/sanity'
import { ENABLED_LANGUAGES, getLocalizedPath, getUILabel } from '../../../lib/i18n'
import { PortableText } from 'astro-portabletext'

export async function getStaticPaths() {
  const paths = []

  // å„è¨€èªã”ã¨ã«ã€ãã®è¨€èªã®è¨˜äº‹ã®ã¿ã§ãƒ‘ã‚¹ã‚’ç”Ÿæˆ
  for (const { id: langId } of ENABLED_LANGUAGES.filter(l => l.id !== 'ja')) {
    const langFilter = langId === 'ja' ? '(!defined(lang) || lang == "ja")' : `lang == "${langId}"`
    const articles = await client.fetch(`*[_type == "article" && ${langFilter}]{ _id }`)

    for (const article of articles) {
      // æ—¥æœ¬èªã¯ãƒ«ãƒ¼ãƒˆã«è¨€èªã‚³ãƒ¼ãƒ‰ã‚’å«ã‚ãªã„
      paths.push({
        params: {
          lang: langId === 'ja' ? undefined : langId,
          id: article._id
        }
      })
    }
  }

  return paths
}

const { lang, id } = Astro.params
const article: Article | null = await getArticleById(id!)

if (!article) {
  return Astro.redirect('/404')
}

const formatDate = (dateString: string) => {
  const locale = lang === 'ja' ? 'ja-JP' :
                 lang === 'en' ? 'en-US' :
                 lang === 'zh-cn' ? 'zh-CN' :
                 lang === 'zh-tw' ? 'zh-TW' :
                 lang === 'ko' ? 'ko-KR' :
                 'en-US'
  
  return new Date(dateString).toLocaleDateString(locale, {
    year: 'numeric',
    month: 'long', 
    day: 'numeric'
  })
}

const typeConfig = {
  spot: { emoji: 'ğŸ—¾', label: getUILabel(lang, 'spot') },
  food: { emoji: 'ğŸ£', label: getUILabel(lang, 'food') },
  transport: { emoji: 'ğŸš„', label: getUILabel(lang, 'transport') },
  hotel: { emoji: 'ğŸ›ï¸', label: getUILabel(lang, 'hotel') },
  note: { emoji: 'ğŸ“', label: getUILabel(lang, 'note') }
}

const config = typeConfig[article.type as keyof typeof typeConfig] || typeConfig.note
---

<Layout 
  title={article.title} 
  description={article.bodyText?.slice(0, 160) || `${article.title}ã®è¨˜äº‹ã§ã™ã€‚`}
  lang={lang}
  pageType="article"
  frontmatter={{
    title: article.title,
    description: article.bodyText?.slice(0, 160) || `${article.title}ã®è¨˜äº‹ã§ã™ã€‚`,
    heroImage: article.coverImage?.asset?.url,
    publishedAt: article.publishedAt,
    type: article.type,
