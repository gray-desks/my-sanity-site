    // Parse the content text and extract article fields
    function parseArticleContent(contentText) {
      const lines = contentText.split('\n');
      const articleData = {
        lang: 'ja' // Default to Japanese
      };
      let inContent = false;
      let contentLines = [];

      for (let i = 0; i < lines.length; i++) {
        const line = lines[i].trim();
        
        // Handle YAML-style content block
        if (line === 'content: |') {
          inContent = true;
          continue;
        }
        
        if (inContent) {
          // Remove leading spaces for content lines
          contentLines.push(lines[i].replace(/^  /, ''));
        } else if (line.includes(':')) {
          const [key, ...valueParts] = line.split(':');
          const value = valueParts.join(':').trim();
          
          if (key && value) {
            const cleanKey = key.trim();
            let cleanValue = value;
            
            // Handle arrays like tags: [tag1, tag2, tag3]
            if (cleanValue.startsWith('[') && cleanValue.endsWith(']')) {
              try {
                cleanValue = JSON.parse(cleanValue);
              } catch {
                // If JSON parsing fails, split by comma
                cleanValue = cleanValue.slice(1, -1).split(',').map(s => s.trim());
              }
            }
            
            articleData[cleanKey] = cleanValue;
          }
        }
      }
      
      if (contentLines.length > 0) {
        articleData.content = contentLines.join('\n');
      }

      // Set default publishedAt if not provided
      if (!articleData.publishedAt) {
        articleData.publishedAt = new Date().toISOString();
      }

      return articleData;
    }

