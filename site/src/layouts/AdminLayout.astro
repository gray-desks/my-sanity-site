---
export interface Props {
  title: string
  description?: string
}

const { 
  title, 
  description = '管理画面 - 旅ログ運営システム'
} = Astro.props

// Current path and helpers for active tab state
const pathname = Astro.url.pathname
const normalized = pathname.endsWith('/') && pathname !== '/' ? pathname.slice(0, -1) : pathname
const baseTab = 'inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium'
const activeTab = 'border-red-500 text-gray-900'
const inactiveTab = 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
const isCreate = normalized === '/admin'
---

<!doctype html>
<html lang="ja" class="h-full bg-gray-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - 管理画面</title>
    
    <!-- Admin-specific fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Prevent search engines from indexing admin pages -->
    <meta name="robots" content="noindex, nofollow">
  </head>
  
  <body class="h-full font-sans antialiased" style="font-family: 'Inter', sans-serif;">
    <div class="min-h-full">
      <!-- Top Navigation -->
      <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 items-center justify-between">
            <div class="flex min-w-0 items-center">
              <!-- Logo -->
              <div class="flex flex-shrink-0 items-center">
                <div class="w-8 h-8 bg-red-600 rounded-lg flex items-center justify-center">
                  <span class="text-white font-bold text-sm">旅</span>
                </div>
                <span class="ml-3 text-xl font-semibold text-gray-900 truncate max-w-[40vw] sm:max-w-none">管理画面</span>
              </div>
              
              <!-- Navigation Links -->
              <div class="hidden sm:ml-8 sm:flex sm:space-x-8">
                <a href="/admin" class={`${isCreate ? activeTab : inactiveTab} ${baseTab}`} aria-current={isCreate ? 'page' : undefined}>
                  記事作成
                </a>
              </div>
            </div>
            
            <!-- Right side -->
            <div class="flex items-center space-x-3">
              <!-- Desktop actions -->
              <div class="hidden sm:flex sm:items-center sm:space-x-3">
                <button id="btn-deploy" type="button"
                        class="inline-flex items-center px-3 py-1.5 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:opacity-60">
                  <svg class="w-4 h-4 mr-1.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  反映（デプロイ）
                </button>
                <a href="/" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200">
                  <svg class="w-4 h-4 mr-1.5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 3h7m0 0v7m0-7L10 14" />
                  </svg>
                  ブログを開く
                </a>
                <a href="https://travel-blog-jp.sanity.studio/default/structure/articles"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200">
                  <svg class="w-4 h-4 mr-1.5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 3h7m0 0v7m0-7L10 14" />
                  </svg>
                  Sanity Studioを開く
                </a>
              </div>
              <!-- Mobile menu button -->
              <div class="sm:hidden">
                <button id="mobile-menu-button" type="button" aria-controls="mobile-menu" aria-expanded="false"
                        class="inline-flex items-center justify-center rounded-md p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-red-500"
                        title="メニュー">
                  <svg id="icon-menu" class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                  </svg>
                  <svg id="icon-close" class="h-6 w-6 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Mobile menu panel -->
        <div id="mobile-menu" class="sm:hidden hidden border-t border-gray-200 bg-white" role="menu" aria-labelledby="mobile-menu-button">
          <div class="space-y-4 divide-y divide-gray-200 px-4 py-3">
            <!-- Section: コンテンツ -->
            <div>
              <div class="px-3 pb-1 text-xs font-semibold text-gray-500 tracking-wider">コンテンツ</div>
              <div class="mt-1 overflow-hidden rounded-lg border border-gray-200 bg-white divide-y divide-gray-100 shadow-sm" role="group" aria-label="コンテンツ">
                <a href="/admin" class={`flex items-center gap-2 px-3 py-3 text-base font-medium ${isCreate ? 'text-gray-900 bg-gray-50' : 'text-gray-700 hover:bg-gray-50'}`} role="menuitem" aria-current={isCreate ? 'page' : undefined}>
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                  記事作成
                </a>
              </div>
            </div>


            <!-- Section: 外部リンク -->
            <div>
              <div class="px-3 pb-1 text-xs font-semibold text-gray-500 tracking-wider">外部リンク</div>
              <div class="mt-1 overflow-hidden rounded-lg border border-gray-200 bg-white divide-y divide-gray-100 shadow-sm" role="group" aria-label="外部リンク">
                <a href="/" target="_blank" rel="noopener noreferrer" aria-label="ブログを開く（新規タブ）" class="flex items-center justify-between px-3 py-3 text-base font-medium text-gray-700 hover:bg-gray-50" role="menuitem">
                  <span class="inline-flex items-center gap-2">
                    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7a2 2 0 012-2h6m4 0h2a2 2 0 012 2v10a2 2 0 01-2 2H7a2 2 0 01-2-2V9"/></svg>
                    ブログを開く
                  </span>
                  <span class="inline-flex items-center gap-1 text-xs text-gray-500">
                    外部
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 3h7m0 0v7m0-7L10 14"/></svg>
                  </span>
                </a>
                <a href="https://travel-blog-jp.sanity.studio/default/structure/articles" target="_blank" rel="noopener noreferrer" aria-label="Sanity Studioを開く（新規タブ）" class="flex items-center justify-between px-3 py-3 text-base font-medium text-gray-700 hover:bg-gray-50" role="menuitem">
                  <span class="inline-flex items-center gap-2">
                    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6l-2-2H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V8l-2-2h-5z"/></svg>
                    Sanity Studioを開く
                  </span>
                  <span class="inline-flex items-center gap-1 text-xs text-gray-500">
                    外部
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 3h7m0 0v7m0-7L10 14"/></svg>
                  </span>
                </a>
              </div>
            </div>

            <!-- Section: アクション -->
            <div class="pt-1">
              <button id="btn-deploy-mobile" type="button" class="w-full inline-flex items-center justify-center rounded-md px-3 py-2 text-base font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:opacity-60" role="menuitem">
                <svg class="w-5 h-5 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                反映（デプロイ）
              </button>
            </div>
          </div>
        </div>
      </nav>

      <!-- Page content -->
      <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </main>

      <script type="module" is:inline>
        // Desktop deploy button
        const btn = document.getElementById('btn-deploy')
        if (btn) {
          btn.addEventListener('click', async () => {
            btn.disabled = true
            const prev = btn.textContent || ''
            btn.textContent = 'デプロイ中...'
            try {
              const res = await fetch('/api/admin/deploy/vercel', { method: 'POST' })
              if (!res.ok) throw new Error('failed')
              await res.json().catch(() => ({}))
              alert('デプロイをトリガーしました。数十秒後に反映されます。')
            } catch (e) {
              console.error(e)
              alert('デプロイのトリガーに失敗しました。時間をおいて再度お試しください。')
            } finally {
              btn.disabled = false
              btn.textContent = prev
            }
          })
        }

        // Mobile menu toggle
        const menuBtn = document.getElementById('mobile-menu-button')
        const menu = document.getElementById('mobile-menu')
        const iconMenu = document.getElementById('icon-menu')
        const iconClose = document.getElementById('icon-close')
        if (menuBtn && menu && iconMenu && iconClose) {
          menuBtn.addEventListener('click', () => {
            const open = menu.classList.toggle('hidden') === false
            menuBtn.setAttribute('aria-expanded', String(open))
            iconMenu.classList.toggle('hidden', open)
            iconClose.classList.toggle('hidden', !open)
          })
        }

        // Mobile deploy button
        const btnMobile = document.getElementById('btn-deploy-mobile')
        if (btnMobile) {
          btnMobile.addEventListener('click', async () => {
            btnMobile.disabled = true
            const prev = btnMobile.textContent || ''
            btnMobile.textContent = 'デプロイ中...'
            try {
              const res = await fetch('/api/admin/deploy/vercel', { method: 'POST' })
              if (!res.ok) throw new Error('failed')
              await res.json().catch(() => ({}))
              alert('デプロイをトリガーしました。数十秒後に反映されます。')
            } catch (e) {
              console.error(e)
              alert('デプロイのトリガーに失敗しました。時間をおいて再度お試しください。')
            } finally {
              btnMobile.disabled = false
              btnMobile.textContent = prev
            }
          })
        }
      </script>
    </div>

    <!-- Admin-specific styles -->
    <style>
      /* Professional admin styling */
      body {
        background: #f9fafb;
      }
      
      /* Smooth transitions for interactive elements */
      a, button {
        transition: all 0.2s ease-in-out;
      }
      
      /* Custom scrollbar for better UX */
      ::-webkit-scrollbar {
        width: 6px;
      }
      
      ::-webkit-scrollbar-track {
        background: #f1f5f9;
      }
      
      ::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 3px;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: #94a3b8;
      }
    </style>
  </body>
</html>