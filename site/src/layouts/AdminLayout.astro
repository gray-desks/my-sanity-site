---
export interface Props {
  title: string
  description?: string
}

const { 
  title, 
  description = '管理画面 - 旅ログ運営システム'
} = Astro.props
---

<!doctype html>
<html lang="ja" class="h-full bg-gray-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - 管理画面</title>
    
    <!-- Admin-specific fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Prevent search engines from indexing admin pages -->
    <meta name="robots" content="noindex, nofollow">
  </head>
  
  <body class="h-full font-sans antialiased" style="font-family: 'Inter', sans-serif;">
    <div class="min-h-full">
      <!-- Top Navigation -->
      <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 justify-between">
            <div class="flex">
              <!-- Logo -->
              <div class="flex flex-shrink-0 items-center">
                <div class="w-8 h-8 bg-red-600 rounded-lg flex items-center justify-center">
                  <span class="text-white font-bold text-sm">旅</span>
                </div>
                <span class="ml-3 text-xl font-semibold text-gray-900">管理画面</span>
              </div>
              
              <!-- Navigation Links -->
              <div class="hidden sm:ml-8 sm:flex sm:space-x-8">
                <a href="/admin" class="border-red-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                  記事作成
                </a>
                <a href="/admin/analytics" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                  分析
                </a>
              </div>
            </div>
            
            <!-- Right side -->
            <div class="flex items-center space-x-4">
              <!-- Blog Access Button -->
              <div class="hidden sm:block">
                <a href="/" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200">
                  <svg class="w-4 h-4 mr-1.5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  ブログを開く
                </a>
              </div>
              
              <!-- Sanity Studio (desktop) -->
              <div class="hidden sm:block">
                <a href="https://travel-blog-jp.sanity.studio"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200">
                  <svg class="w-4 h-4 mr-1.5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  Sanity Studioを開く
                </a>
              </div>
              
              <!-- Mobile blog access -->
              <div class="sm:hidden">
                <a href="/" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="inline-flex items-center justify-center w-8 h-8 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-red-500 transition-colors"
                   title="ブログを開く">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>

              <!-- Sanity Studio (mobile) -->
              <div class="sm:hidden">
                <a href="https://travel-blog-jp.sanity.studio" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="inline-flex items-center justify-center w-8 h-8 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-red-500 transition-colors"
                   title="Sanity Studioを開く">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>
 
              <!-- Divider -->
              <div class="hidden sm:block w-px h-6 bg-gray-300" aria-hidden="true"></div>
              
              <!-- Status indicator -->
              <div class="flex items-center space-x-2">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <span class="text-sm text-gray-500 hidden md:inline">システム正常</span>
              </div>
              
              <!-- User menu -->
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                  <span class="text-xs font-medium text-gray-700">管</span>
                </div>
                <span class="text-sm text-gray-700 hidden sm:inline">管理者</span>
              </div>
            </div>
          </div>
        </div>
      </nav>

      <!-- Page content -->
      <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </main>
    </div>

    <!-- Admin-specific styles -->
    <style>
      /* Professional admin styling */
      body {
        background: #f9fafb;
      }
      
      /* Smooth transitions for interactive elements */
      a, button {
        transition: all 0.2s ease-in-out;
      }
      
      /* Custom scrollbar for better UX */
      ::-webkit-scrollbar {
        width: 6px;
      }
      
      ::-webkit-scrollbar-track {
        background: #f1f5f9;
      }
      
      ::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 3px;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: #94a3b8;
      }
    </style>
  </body>
</html>