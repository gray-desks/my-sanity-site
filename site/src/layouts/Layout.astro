---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
import HreflangLinks from '../components/HreflangLinks.astro'
import Seo from '../components/Seo.astro'
import { isRTL, getFontFamily, getUILabel, getLocalizedPath, DEFAULT_LANGUAGE } from '../lib/i18n'

export interface Props {
  title: string
  description?: string
  lang?: string
  frontmatter?: any
  pageType?: 'article' | 'website'
}

const { 
  title, 
  description = '日本全国の旅ログを多言語で発信するブログ',
  lang = DEFAULT_LANGUAGE,
  frontmatter = { title, description, lang },
  pageType = 'website'
} = Astro.props

const isRightToLeft = isRTL(lang)
const fontFamily = getFontFamily(lang)

// Get current path for hreflang links
const currentPath = Astro.url.pathname
---

<!doctype html>
<html lang={lang} dir={isRightToLeft ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Comprehensive SEO: Canonical, OG, JSON-LD -->
    <Seo 
      frontmatter={frontmatter} 
      pathname={currentPath} 
      lang={lang} 
      pageType={pageType}
    />
    
    <!-- Hreflang links for 20 languages + x-default -->
    <HreflangLinks currentPath={currentPath} />
    
    <!-- Multi-language Font Loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    {lang === 'ar' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    {lang === 'hi' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    {lang === 'th' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    {lang === 'ru' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700&subset=cyrillic&display=swap" rel="stylesheet">
    )}
    {(['ja', 'zh-cn', 'zh-tw', 'ko'].includes(lang)) && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Noto+Sans+SC:wght@400;500;700&family=Noto+Sans+TC:wght@400;500;700&family=Noto+Sans+KR:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body 
    class={`min-h-screen bg-gradient-to-br from-slate-50 via-gray-50 to-blue-50 text-gray-800 font-sans relative overflow-x-hidden ${isRightToLeft ? 'rtl-layout' : 'ltr-layout'}`}
    style={`font-family: ${fontFamily}`}
  >
    <!-- Professional background pattern -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
      <!-- Subtle travel pattern overlay -->
      <div class="absolute inset-0 opacity-[0.015]" style="background-image: url(\"data:image/svg+xml,%3Csvg width='120' height='120' viewBox='0 0 120 120' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23334155' fill-opacity='1'%3E%3Cpath d='M60 0L66.33 22.44L90 30L66.33 37.56L60 60L53.67 37.56L30 30L53.67 22.44z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E\");"></div>
      <!-- Elegant gradient orbs -->
      <div class="absolute top-20 right-20 w-80 h-80 bg-gradient-to-bl from-blue-500/5 via-teal-500/5 to-transparent rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-40 left-20 w-96 h-96 bg-gradient-to-tr from-slate-500/5 via-blue-500/5 to-transparent rounded-full blur-3xl"></div>
      <div class="absolute top-1/3 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-r from-teal-500/5 to-blue-500/5 rounded-full blur-3xl"></div>
    </div>

    <Navbar lang={lang} />

    <div class="max-w-7xl mx-auto px-4 py-0 relative">
      <main class="w-full">
        <slot />
      </main>
    </div>

    <footer class="relative mt-24 bg-gradient-to-br from-slate-900 via-blue-900 to-teal-900 text-white overflow-hidden">
      <!-- Travel-themed decorative elements -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(\"data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='1'%3E%3Cpath d='M30 0L33.66 11.22L45 15L33.66 18.78L30 30L26.34 18.78L15 15L26.34 11.22z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E\");"></div>
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-blue-400/30 to-transparent"></div>
      
      <!-- Compass decoration -->
      <div class="absolute top-8 right-8 w-24 h-24 opacity-10 animate-spin-slow hidden lg:block">
        <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="2" class="text-white"/>
          <path d="M50 15 L53 25 L50 22 L47 25 Z" fill="currentColor" class="text-red-300"/>
          <path d="M50 85 L53 75 L50 78 L47 75 Z" fill="currentColor" class="text-white"/>
          <text x="50" y="20" text-anchor="middle" class="text-xs fill-white font-bold">N</text>
        </svg>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6 py-12">
        <div class="mb-8">
          <!-- Brand Section -->
          <div class="max-w-md mx-auto text-center">
            <div class="flex items-baseline justify-center gap-3 mb-6 flex-wrap">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-teal-500 rounded-lg flex items-center justify-center shadow-lg flex-shrink-0">
                <span class="text-white font-bold text-lg">旅</span>
              </div>
              <span class="text-xl font-bold bg-gradient-to-r from-blue-200 to-teal-200 bg-clip-text text-transparent">
                {getUILabel(lang, 'siteTitle')}
              </span>
              <p class="text-gray-300 text-sm leading-relaxed">- {getUILabel(lang, 'siteDescription')}</p>
            </div>
            
            <!-- Travel stats -->
            <div class="grid grid-cols-2 gap-4">
              <div class="text-center p-4 bg-white/5 rounded-lg backdrop-blur-sm">
                <div class="text-2xl font-bold text-blue-300">20+</div>
                <div class="text-sm text-gray-400">Languages</div>
              </div>
              <div class="text-center p-4 bg-white/5 rounded-lg backdrop-blur-sm">
                <div class="text-2xl font-bold text-teal-300">∞</div>
                <div class="text-sm text-gray-400">Adventures</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Bottom bar -->
        <div class="border-t border-white/10 pt-8 text-center">
          <div class="text-gray-400 text-sm">
            <p>&copy; 2025 {getUILabel(lang, 'siteTitle')}</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Professional animations and interactions -->
    <style>
      @keyframes pulse-slow {
        0%, 100% { opacity: 0.8; transform: scale(1); }
        50% { opacity: 0.6; transform: scale(1.05); }
      }
      
      @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      
      .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
      }
      
      .animate-spin-slow {
        animation: spin-slow 60s linear infinite;
      }
      
      /* Smooth scrolling */
      html {
        scroll-behavior: smooth;
      }
      
      /* Professional typography */
      body {
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
    </style>
    
    <!-- Vercel Analytics & Speed Insights -->
    <script>
      // Vercel Analytics
      import('@vercel/analytics').then(module => {
        if (module.inject) {
          module.inject();
        }
      });

      // Vercel Speed Insights  
      import('@vercel/speed-insights').then(module => {
        if (module.injectSpeedInsights) {
          module.injectSpeedInsights();
        }
      });
    </script>

  </body>
</html>