---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
import { isRTL, getFontFamily, getUILabel, getLocalizedPath, DEFAULT_LANGUAGE } from '../lib/i18n'

export interface Props {
  title: string
  description?: string
  lang?: string
}

const { 
  title, 
  description = '日本全国の旅ログを多言語で発信するブログ',
  lang = DEFAULT_LANGUAGE
} = Astro.props

const isRightToLeft = isRTL(lang)
const fontFamily = getFontFamily(lang)
---

<!doctype html>
<html lang={lang} dir={isRightToLeft ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={
      lang === 'ja' ? 'ja_JP' : 
      lang === 'en' ? 'en_US' :
      lang === 'zh-cn' ? 'zh_CN' :
      lang === 'zh-tw' ? 'zh_TW' :
      lang === 'ko' ? 'ko_KR' :
      lang === 'ar' ? 'ar_AR' :
      'en_US'
    } />
    
    <!-- Multi-language Font Loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    {lang === 'ar' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    {lang === 'hi' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    {lang === 'th' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    {lang === 'ru' && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700&subset=cyrillic&display=swap" rel="stylesheet">
    )}
    {(['ja', 'zh-cn', 'zh-tw', 'ko'].includes(lang)) && (
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=Noto+Sans+SC:wght@400;500;700&family=Noto+Sans+TC:wght@400;500;700&family=Noto+Sans+KR:wght@400;500;700&display=swap" rel="stylesheet">
    )}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body 
    class={`min-h-screen bg-gradient-to-br from-slate-50 via-white to-blue-50 text-gray-700 font-sans relative overflow-x-hidden ${isRightToLeft ? 'rtl-layout' : 'ltr-layout'}`}
    style={`font-family: ${fontFamily}`}
  >
    <!-- Decorative background elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
      <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-brand-100/30 to-transparent rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-accent-100/40 to-transparent rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-r from-secondary-100/30 to-purple-100/30 rounded-full blur-3xl animate-pulse-slow"></div>
    </div>

    <Navbar lang={lang} />

    <div class="max-w-7xl mx-auto px-4 py-8 relative">
      <main class="w-full">
        <slot />
      </main>
    </div>

    <footer class="relative mt-20 bg-gradient-to-r from-slate-900 via-gray-900 to-slate-900 text-white overflow-hidden">
      <!-- Decorative elements -->
      <div class="absolute inset-0 bg-mesh-gradient opacity-5 animate-mesh"></div>
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-brand-400/50 to-transparent"></div>
      
      <div class="relative max-w-6xl mx-auto px-4 py-12">
        <div class="text-center">
          <div class="inline-flex items-center gap-3 mb-6">
            <div class="w-10 h-10 bg-gradient-brand rounded-xl flex items-center justify-center">
              <span class="text-white font-bold text-lg">旅</span>
            </div>
            <span class="text-2xl font-bold bg-gradient-to-r from-brand-400 to-accent-400 bg-clip-text text-transparent">
              {getUILabel(lang, 'siteTitle')}
            </span>
          </div>
          <p class="text-gray-300 mb-4">{getUILabel(lang, 'siteDescription')}</p>
          <div class="flex justify-center space-x-6 mb-6">
            <a 
              href={getLocalizedPath('/', lang)} 
              class="text-gray-400 hover:text-brand-400 transition-colors"
            >
              {getUILabel(lang, 'home')}
            </a>
            <a 
              href="#" 
              class="text-gray-400 hover:text-brand-400 transition-colors"
            >
              {getUILabel(lang, 'privacy')}
            </a>
          </div>
          <div class="text-gray-500 text-sm border-t border-gray-800 pt-6">
            <p>&copy; 2025 {getUILabel(lang, 'siteTitle')}. {getUILabel(lang, 'allRightsReserved')}</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Vercel Analytics & Speed Insights -->
    <script>
      // Vercel Analytics
      import('@vercel/analytics').then(module => {
        if (module.inject) {
          module.inject();
        }
      });

      // Vercel Speed Insights  
      import('@vercel/speed-insights').then(module => {
        if (module.injectSpeedInsights) {
          module.injectSpeedInsights();
        }
      });
    </script>

  </body>
</html>